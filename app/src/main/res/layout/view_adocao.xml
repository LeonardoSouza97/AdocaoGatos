<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/adocaoPerfil"
    android:layout_height="100dp">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fotoCircleViewPetAdocaoTela"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:src="@mipmap/ic_pet_icon"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/editNomeAdotante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fotoCircleViewPetAdocaoTela"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/fotoCircleViewPetAdocaoTela"
        android:text="Adotante" />

    <TextView
        android:id="@+id/editNomePetAdocao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editNomeAdotante"
        android:layout_below="@+id/editNomeAdotante"
        android:text="Nome Pet" />

    <TextView
        android:id="@+id/editDataAdocao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editNomePetAdocao"
        android:layout_below="@+id/editNomePetAdocao"
        android:text="Data Adoção" />

    <ImageButton
        android:id="@+id/btnAceitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editNomeAdotante"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/editDataAdocao"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/btnRecusar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAceitar"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/btnAceitar"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnRecusar"
        android:layout_marginEnd="9dp"
        app:srcCompat="@android:drawable/ic_dialog_info" />

</RelativeLayout>