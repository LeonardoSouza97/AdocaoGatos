<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@mipmap/rounded_corner_colorido"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dialog_usuario_foto"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_home"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:srcCompat="@color/cardview_light_background" />

        <TextView
            android:id="@+id/dialog_name_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:text="Nome"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_endereco_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:text="EndereÃ§o"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_telefone_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Telefone"
            android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_email_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_data_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Data de Nascimento"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:text="Teste"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp">

            <Button
                android:id="@+id/btnLigar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Ligar"
                android:textColor="@color/cardview_light_background"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnEnviarEmailDono"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/ic_message_black_24dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Enviar Email"
                android:textColor="@color/cardview_light_background"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>