<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dialog_pet_foto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_home"
            app:srcCompat="@color/cardview_light_background" />

        <TextView
            android:id="@+id/dialog_name_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_perm_contact_calendar_black_24dp"
            android:text="Nome"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dialog_raca_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pets_black_24dp"
            android:text="Raça"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_idade_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:text="Idade"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_vacionado_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vaccine"
            android:text="Vacinado"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/dialog_vermifugado_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vaccine"
            android:text="Vermifugado"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/dialog_peso_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_weight_tool"
            android:text="Peso"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/dialog_porte_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_porte"
            android:text="Porte"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/dialog_descricao_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_description_black_24dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Descrição"
            android:textAlignment="viewStart"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:text="Teste"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp">

            <Button
                android:id="@+id/btnAdotar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="SOLICITAR ADOÇÃO" />

            <Button
                android:id="@+id/btnEnviarMensagem"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape"
                android:drawableLeft="@drawable/ic_message_black_24dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Enviar Mensagem" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>