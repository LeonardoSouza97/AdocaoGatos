<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.BuscaPetActivity">


    <TextView
        android:id="@+id/heading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="31dp"
        android:text="Buscar Pets"
        android:textColor="#555555"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editPesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/heading_label"
        android:layout_below="@+id/heading_label"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/search_btn"
        android:ems="10"
        android:hint="Pesquise aqui"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="#999999"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editPesquisa"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editPesquisa"
        android:layout_marginRight="30dp"
        android:background="@android:color/background_light"
        app:srcCompat="@mipmap/ic_search" />


    <Spinner
        android:id="@+id/cbEspecieBusca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editPesquisa"
        android:hint="EspÃ©cie" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaTodosPets"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editPesquisa"
        android:layout_marginTop="23dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnVoltarBuscaPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listaTodosPets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="Voltar" />

</RelativeLayout>